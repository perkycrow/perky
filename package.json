{
  "name": "@perkycrow/perky",
  "version": "0.1.0",
  "description": "A modular framework for JavaScript game development",
  "type": "module",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "dev:build": "vite build --config vite.examples.config.js",
    "dev:preview": "vite preview --config vite.examples.config.js",
    "den": "vite serve defend_the_den --port 3000",
    "den:build": "vite build --config vite.den.config.js",
    "den:deploy": "vite build --config vite.den.config.js && rm -rf ../perkycrow_com/public/den && cp -r dist/defend_the_den ../perkycrow_com/public/den",
    "den:preview": "vite preview --config vite.den.config.js",
    "test": "vitest run",
    "cleaner": "node scripts/cleaner.js",
    "clean": "node scripts/cleaner.js --audit --fix"
  },
  "keywords": [
    "javascript",
    "gamedev",
    "webgl",
    "canvas",
    "game-development"
  ],
  "author": "PerkyCrow <contact@perkycrow.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perkycrow/perky.git"
  },
  "bugs": {
    "url": "https://github.com/perkycrow/perky/issues"
  },
  "homepage": "https://github.com/perkycrow/perky#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "acorn": "^8.15.0",
    "canvas": "^3.2.0",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^26.1.0",
    "vite": "^6.4.1",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@4.12.0"
}
