{
  "name": "@perkycrow/perky",
  "version": "0.1.0",
  "description": "A modular framework for JavaScript game development",
  "type": "module",
  "files": [
    "core/**/*.js",
    "canvas/**/*.js",
    "audio/**/*.js",
    "ui/**/*.js",
    "input/**/*.js",
    "application/**/*.js",
    "game/**/*.js",
    "math/**/*.js",
    "editor/**/*.js",
    "**/*.css",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./core/*": {
      "import": "./core/*.js"
    },
    "./canvas/*": {
      "import": "./canvas/*.js"
    },
    "./audio/*": {
      "import": "./audio/*.js"
    },
    "./ui/*": {
      "import": "./ui/*.js"
    },
    "./ui/*.css": "./ui/*.css",
    "./input/*": {
      "import": "./input/*.js"
    },
    "./application/*": {
      "import": "./application/*.js"
    },
    "./game/*": {
      "import": "./game/*.js"
    },
    "./math/*": {
      "import": "./math/*.js"
    },
    "./editor/*": {
      "import": "./editor/*.js"
    },
    "./**/*.css": "./**/*.css"
  },
  "sideEffects": false,
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "chokidar 'src/**/*' -c 'yarn build' --initial",
    "test": "vitest run",
    "test:watch": "vitest",
    "mist": "vite serve mistbrewer --port 3000",
    "den": "vite serve defend_the_den --port 3000",
    "cleaner": "node scripts/cleaner.js",
    "clean": "node scripts/cleaner.js --audit --fix"
  },
  "keywords": [
    "javascript",
    "gamedev",
    "webgl",
    "canvas",
    "game-development"
  ],
  "author": "PerkyCrow <contact@perkycrow.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perkycrow/core.git"
  },
  "bugs": {
    "url": "https://github.com/perkycrow/core/issues"
  },
  "homepage": "https://github.com/perkycrow/core#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "acorn": "^8.15.0",
    "canvas": "^3.2.0",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.55.0",
    "jsdom": "^26.1.0",
    "vite": "^6.4.1",
    "vitest": "^3.1.3"
  },
  "packageManager": "yarn@4.12.0"
}
